<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="@dimen/material_2dp"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/material_48dp"
        android:orientation="horizontal">

      <TextView
          android:id="@+id/detail_item_date_tv"
          android:layout_width="0dip"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:layout_marginLeft="@dimen/material_24dp"
          android:gravity="start|center_vertical"
          android:textColor="@android:color/black"
          android:textSize="@dimen/material_16sp"
          />

      <TextView
          android:id="@+id/detail_item_wind_tv"
          android:layout_width="0dip"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:gravity="start|center_vertical"
          android:textColor="@android:color/black"
          android:textSize="@dimen/material_16sp"
          />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/material_64dp"
        android:orientation="horizontal">

      <LinearLayout
          android:layout_width="0dip"
          android:layout_weight="1"
          android:layout_height="match_parent"
          android:orientation="horizontal"
          >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/material_24dp"
            android:gravity="start|center_vertical"
            android:textColor="@android:color/black"
            android:textSize="@dimen/material_16sp"
            android:text="白天 : "
            />

        <TextView
            android:id="@+id/detail_item_weather_day_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/material_16dp"
            android:gravity="start|center_vertical"
            android:textColor="@android:color/black"
            android:textSize="@dimen/material_16sp"
            />

        <TextView
            android:id="@+id/detail_item_weather_day_degree_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/material_16dp"
            android:gravity="start|center_vertical"
            android:textColor="@android:color/black"
            android:textSize="@dimen/material_16sp"
            />
      </LinearLayout>

      <LinearLayout
          android:layout_width="0dip"
          android:layout_weight="1"
          android:layout_height="match_parent"
          android:orientation="horizontal"
          >

        <ImageView
            android:id="@+id/detail_item_weather_day_iv"
            android:layout_width="@dimen/material_64dp"
            android:layout_height="@dimen/material_64dp"
            android:layout_marginLeft="@dimen/material_24dp"
            />
      </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/material_64dp"
        android:orientation="horizontal">

      <LinearLayout
          android:layout_width="0dip"
          android:layout_weight="1"
          android:layout_height="match_parent"
          android:orientation="horizontal"
          >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/material_24dp"
            android:gravity="start|center_vertical"
            android:textColor="@android:color/black"
            android:textSize="@dimen/material_16sp"
            android:text="夜间 : "
            />

        <TextView
            android:id="@+id/detail_item_weather_night_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/material_16dp"
            android:gravity="start|center_vertical"
            android:textColor="@android:color/black"
            android:textSize="@dimen/material_16sp"
            />

        <TextView
            android:id="@+id/detail_item_weather_night_degree_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/material_16dp"
            android:gravity="start|center_vertical"
            android:textColor="@android:color/black"
            android:textSize="@dimen/material_16sp"
            />
      </LinearLayout>

      <LinearLayout
          android:layout_width="0dip"
          android:layout_weight="1"
          android:layout_height="match_parent"
          android:orientation="horizontal"
          >

        <ImageView
            android:id="@+id/detail_item_weather_night_iv"
            android:layout_width="@dimen/material_64dp"
            android:layout_height="@dimen/material_64dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/material_24dp"
            />
      </LinearLayout>
    </LinearLayout>


  </LinearLayout>


</android.support.v7.widget.CardView>